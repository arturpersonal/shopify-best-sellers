{
  "name": "best-sellers",
  "version": "1.0.0",
  "description": "A Shopify theme section that showcases the best-selling products, built using Tailwind CSS for responsive design and customization.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "run-p -sr shopify:dev watch",
    "shopify:dev": "shopify theme dev -e dev",
    "pull": "shopify theme pull -d -o sections/*.json templates/*.json templates/customers/*.json config/settings_data.json",
    "watch": "vite build -w",
    "build": "vite build --minify",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arturpersonal/shopify-best-sellers"
  },
  "keywords": [
    "shopify",
    "theme",
    "best-sellers",
    "tailwind-css",
    "ecommerce",
    "responsive"
  ],
  "author": "Artur",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.14",
    "@tailwindcss/postcss": "^4.0.14",
    "@types/tailwindcss": "^3.1.0",
    "autoprefixer": "^10.4.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.0.14",
    "vite": "^6.2.2"
  }
}
